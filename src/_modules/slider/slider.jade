mixin slider(klass, mode)
    if mode == 'multi'
        ._slidermulti(class=klass)
            if block
                block
    if mode == 'multi3'
        ._slidermulti3(class=klass)
            if block
                block
    if mode == 'normal'
        ._slider(class=klass)
            if block
                block
    if mode == 'static'
        ._slider-static(class=klass)
            if block
                block