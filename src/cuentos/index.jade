extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../';

include ../_modules/slider/slider

block content
    main.cuentos
        section.cuentos__cuento
            .cuentos__cuento__container
                .cuentos__cuento__image
                    img.-container(src="/images/diversion/cuentos-container.png")
                    img.-placeholder(src="/images/cuentos/cuento-1.jpg" data-content="cuento1" data-cuento="cuento1")
                    img.-placeholder(src="/images/cuentos/cuento-2.png" data-content="cuento2" data-cuento="cuento2")
                    img.-placeholder(src="/images/cuentos/cuento-3.png" data-content="cuento3" data-cuento="cuento3")
                    img.-placeholder(src="/images/cuentos/cuento-4.png" data-content="cuento4" data-cuento="cuento4")
                    img.-placeholder(src="/images/cuentos/cuento-5.png" data-content="cuento5" data-cuento="cuento5")
                    img.-placeholder(src="/images/cuentos/cuento-6.png" data-content="cuento6" data-cuento="cuento6")
                .cuentos__cuento__fogata
                    img(src="/images/diversion/cuentos-fogata.png")
                +slider('cuentos__cuento__slider', 'multi')
                    .cuentos__cuento__slide(data-target="cuento1")
                        .cuentos__cuento__slide-image
                            img(src="/images/cuentos/cuento-1-icon.png")
                        p.cuentos__cuento__text maik y las escaleras
                    .cuentos__cuento__slide(data-target="cuento2")
                        .cuentos__cuento__slide-image
                            img(src="/images/cuentos/cuento-2-icon.png")
                        p.cuentos__cuento__text la casa de arecio
                    .cuentos__cuento__slide(data-target="cuento3")
                        .cuentos__cuento__slide-image
                            img(src="/images/cuentos/cuento-3-icon.png")
                        p.cuentos__cuento__text preguntónimo
                    .cuentos__cuento__slide(data-target="cuento4")
                        .cuentos__cuento__slide-image
                            img(src="/images/cuentos/cuento-4-icon.png")
                        p.cuentos__cuento__text el flautista de pulmahue
                    .cuentos__cuento__slide(data-target="cuento5")
                        .cuentos__cuento__slide-image
                            img(src="/images/cuentos/cuento-5-icon.png")
                        p.cuentos__cuento__text el gigante yoyo
                    .cuentos__cuento__slide(data-target="cuento6")
                        .cuentos__cuento__slide-image
                            img(src="/images/cuentos/cuento-6-icon.png")
                        p.cuentos__cuento__text rey sapo
        section.cuentos__participar
            h2.cuentos__participar__title ¡participa!
            p.cuentos__participar__text ¡escribe tus ideas para otro mundo!
            form.cuentos__participar__form
                .cuentos__participar__group
                    input.cuentos__participar__input(placeholder="nombre")
                .cuentos__participar__group
                    input.cuentos__participar__input(placeholder="edad")
                .cuentos__participar__group
                    input.cuentos__participar__input(placeholder="ciudad")
                .cuentos__participar__group
                    input.cuentos__participar__input(placeholder="correo")
                .cuentos__participar__group.cuentos__participar__group--textarea
                    textarea.cuentos__participar__input.cuentos__participar__input--textarea(placeholder="escribe tu cuento")
                .cuentos__participar__group.cuentos__participar__group--blue
                    p adjunta una oto o dibujo de tu cuento o de cómo te lo imaginas
                    .cuentos__participar__wrapper
                        label.cuentos__participar__label(for="file") adjuntar
                        input.cuentos__participar__input.cuentos__participar__input--file(type="file" id="file" name="file")

            section.cuentos__gallery
                h2.cuentos__gallery__title ideas de nuestros participantes
                .cuentos__gallery__container
                    .cuentos__gallery__slide
                        .cuentos__gallery__idea
                            .cuentos__gallery__image
                                img(src="https://picsum.photos/id/237/1200/1300")
                            h3.cuentos__gallery__idea-title individuales plasticos
                            p.cuentos__gallery__idea-name cristobal
                            p.cuentos__gallery__idea-text Muy buena idea para utilizar las tapas plasticas. Solo necesitas pegamento y tapas y podras hacer unos lindos individuales.

                    .cuentos__gallery__slide
